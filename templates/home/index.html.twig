{% extends 'base.html.twig' %}

{% block body %}
    <!-- Section de présentation de la société -->
    <section>
        <h1>Bienvenue chez {{ companyName }}</h1>
        <p>{{ slogan }}</p>
        <p>Adresse : Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
        <p>Email : stubborn@blabla.com</p>
    </section>

    <!-- Section des produits mis en avant -->
    <section>
        <h2>Nos sweat-shirts mis en avant</h2>
        <div class="featured-products">
            {% for product in featuredSweatshirts %}
                <div class="product-card">
                    <h3>{{ product.name }}</h3>
                    <img src="{{ product.image }}" alt="{{ product.name }}">
                    <p>Prix : {{ product.price }} €</p>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <!-- Bouton visible uniquement si l'utilisateur est connecté -->
                        <a href="{{ path('app_product_detail', { id: product.id }) }}" class="btn">Voir</a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
