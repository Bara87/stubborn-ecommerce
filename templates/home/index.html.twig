{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <script>
            window.location.href = "{{ path('admin_sweatshirt_create') }}";
        </script>
    {% endif %}

    <div class="products-container">
        {% for product in featuredSweatshirts %}
            <div class="product-card">
                <div class="product-image">
                    {% if product.imagePath %}
                        <img src="{{ product.imagePath }}" alt="{{ product.name }}">
                    {% else %}
                        <div class="placeholder-image">
                            <div class="cross"></div>
                        </div>
                    {% endif %}
                </div>
                <div class="product-info">
                    <p class="product-name">Nom : {{ product.name }}</p>
                    <p class="product-price">Prix : {{ product.price }} â‚¬</p>
                    {% if app.user and not is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('product_detail', { id: product.id }) }}" class="voir-button">VOIR</a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>

    <style>
        .products-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
            padding: 50px 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .product-card {
            width: 300px;
            border: 2px solid #000;
            border-radius: 5px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .product-image {
            width: 100%;
            height: 250px;
            border: 2px solid #ddd;
            position: relative;
            overflow: hidden;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            display: block;
        }

        .placeholder-image {
            width: 100%;
            height: 100%;
            position: relative;
            background: white;
        }

        .cross {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .cross:before,
        .cross:after {
            content: '';
            position: absolute;
            background: #000;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
        }

        .cross:before {
            transform: rotate(45deg);
        }

        .cross:after {
            transform: rotate(-45deg);
        }

        .product-info {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .product-name,
        .product-price {
            margin: 0;
            font-size: 16px;
        }

        .voir-button {
            align-self: flex-end;
            padding: 5px 15px;
            background: white;
            border: 2px solid #000;
            border-radius: 5px;
            text-decoration: none;
            color: #000;
            font-weight: bold;
        }

        .voir-button:hover {
            background: #f0f0f0;
        }
    </style>
{% endblock %}
