{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<style>
    .register-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 20px;
        border: 2px solid #000;
        border-radius: 5px;
    }

    .register-title {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #333;
    }

    .form-group input {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .register-button {
        width: 100%;
        padding: 10px;
        background-color: #5bc0de;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        margin-top: 10px;
    }

    .register-button:hover {
        background-color: #46b8da;
    }

    .login-link {
        text-align: center;
        margin-top: 20px;
    }

    .login-button {
        display: inline-block;
        padding: 8px 16px;
        background-color: #5bc0de;
        color: white;
        text-decoration: none;
        border-radius: 3px;
    }

    .login-button:hover {
        background-color: #46b8da;
    }
</style>

<div class="register-container">
    <h1 class="register-title">S'inscrire</h1>

    {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_label(registrationForm.name, 'Nom utilisateur :') }}
            {{ form_widget(registrationForm.name) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.email, 'Adresse mail :') }}
            {{ form_widget(registrationForm.email) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.deliveryAddress, 'Adresse de livraison :') }}
            {{ form_widget(registrationForm.deliveryAddress) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe :') }}
            {{ form_widget(registrationForm.plainPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe :') }}
            {{ form_widget(registrationForm.plainPassword.second) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.adminCode, 'Code administrateur :') }}
            {{ form_widget(registrationForm.adminCode) }}
        </div>

        <button type="submit" class="register-button">Créer un compte</button>
    {{ form_end(registrationForm) }}

    <div class="login-link">
        <p>Déjà inscrit ?</p>
        <a href="{{ path('app_login') }}" class="login-button">Se Connecter</a>
    </div>
</div>
{% endblock %}
