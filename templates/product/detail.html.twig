{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<style>
    .product-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
    }

    .product-content {
        display: flex;
        border: 2px solid #000;
        padding: 20px;
    }

    .product-image {
        width: 50%;
        position: relative;
        min-height: 400px;
        border: 2px solid #000;
    }

    .placeholder {
        width: 100%;
        height: 100%;
        position: relative;
    }

    .placeholder::before,
    .placeholder::after {
        content: '';
        position: absolute;
        background: #000;
        top: 50%;
        left: 0;
        right: 0;
        height: 2px;
    }

    .placeholder::before {
        transform: rotate(45deg);
    }

    .placeholder::after {
        transform: rotate(-45deg);
    }

    .product-info {
        width: 50%;
        padding-left: 20px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .product-details {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .product-text {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .product-text p {
        margin: 0;
    }

    .size-container {
        width: 150px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .size-container p {
        margin: 0;
    }

    .size-selector {
        width: 100%;
        padding: 5px;
        border: 2px solid #000;
    }

    .add-to-cart-button {
        padding: 10px 20px;
        background: white;
        border: 2px solid #000;
        border-radius: 5px;
        cursor: pointer;
        width: fit-content;
        margin-top: 20px;
    }

    .right-column {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 10px;
    }
</style>

<div class="product-container">
    <div class="product-content">
        <div class="product-image">
            {% if product.imagePath %}
                <img src="{{ product.imagePath }}" alt="{{ product.name }}">
            {% else %}
                <div class="placeholder"></div>
            {% endif %}
        </div>

        <div class="product-info">
            <div class="product-details">
                <div class="product-text">
                    <p>Nom : {{ product.name }}</p>
                    <p>Prix : {{ product.price }} â‚¬</p>
                </div>

                <div class="right-column">
                    <div class="size-container">
                        <p>Taille</p>
                        <select name="size" id="size" class="size-selector" required>
                            <option value="XS">XS</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                    </div>

                    <form method="post" action="{{ path('cart_add', { id: product.id }) }}">
                        <input type="hidden" name="size" id="selected-size">
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit" class="add-to-cart-button">AJOUTER AU PANIER</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const sizes = {{ product.sizes|json_encode()|raw }};
    const sizeSelect = document.getElementById('size');
    const selectedSizeInput = document.getElementById('selected-size');

    function updateAvailableSizes() {
        const options = sizeSelect.options;
        for (let i = 0; i < options.length; i++) {
            const size = options[i].value;
            if (!sizes[size] || sizes[size] === 0) {
                options[i].disabled = true;
            }
        }
    }

    sizeSelect.addEventListener('change', function() {
        selectedSizeInput.value = this.value;
    });

    updateAvailableSizes();
    selectedSizeInput.value = sizeSelect.value;
</script>
{% endblock %}