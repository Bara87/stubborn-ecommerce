{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<!-- Bouton d'ajout visible uniquement pour l'admin -->
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin_sweatshirt_new') }}" class="add-button">Ajouter un nouveau produit</a>
{% endif %}
<h1>Liste des Produits</h1>

<!-- Formulaire de filtre par prix (visible pour tous) -->
<form method="get" action="{{ path('app_products') }}" class="filter-form">
    <label for="minPrice">Prix minimum</label>
    <input type="number" name="minPrice" id="minPrice" step="0.01" value="{{ app.request.query.get('minPrice', '') }}">

    <label for="maxPrice">Prix maximum</label>
    <input type="number" name="maxPrice" id="maxPrice" step="0.01" value="{{ app.request.query.get('maxPrice', '') }}">

    <button type="submit">Filtrer</button>
</form>

<!-- Liste des produits -->
<div class="product-list">
    {% for product in products %}
        <div class="product-item">
            <h3>{{ product.name }}</h3>
            <p>Prix : {{ product.price }} €</p>
            {% if product.imagePath %}
                <a href="{{ path('app_product_detail', {'id': product.id}) }}">
                    <img src="{{ product.imagePath }}" alt="{{ product.name }}" class="product-image">
                </a>
            {% else %}
                <p>Aucune image disponible</p>
            {% endif %}

            <!-- Actions supplémentaires pour l'admin -->
            {% if is_granted('ROLE_ADMIN') %}
                <div class="admin-actions">
                    <a href="{{ path('admin_sweatshirt_edit', {'id': product.id}) }}">Modifier</a>
                    <a href="{{ path('admin_sweatshirt_delete', {'id': product.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">Supprimer</a>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>



<style>
    /* Style du formulaire de filtre */
    .filter-form {
        margin-bottom: 20px;
    }

    .filter-form label {
        margin-right: 10px;
    }

    .filter-form input {
        margin-bottom: 10px;
        padding: 5px;
    }

    .filter-form button {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }

    .filter-form button:hover {
        background-color: #45a049;
    }

    /* Conteneur principal pour les produits */
    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    /* Style de chaque produit */
    .product-item {
        flex: 1 1 250px;
        border: 1px solid #ddd;
        padding: 15px;
        background-color: #f9f9f9;
        text-align: center;
    }

    .product-item h3 {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .product-item p {
        font-size: 1em;
        margin-bottom: 10px;
    }

    /* Style de l'image du produit */
    .product-image {
        max-width: 200px;
        height: auto;
        margin-bottom: 10px;
    }

    /* Actions supplémentaires pour l'admin */
    .admin-actions a {
        margin-right: 10px;
        color: #007bff;
        text-decoration: none;
    }

    .admin-actions a:hover {
        text-decoration: underline;
    }

    .add-button {
        display: inline-block;
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 20px;
    }

    .add-button:hover {
        background-color: #45a049;
    }
</style>
{% endblock %}
