{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}

<h1>Liste des Produits</h1>

<!-- Liste des produits -->
<div class="product-list">
    <!-- Barre de recherche traitée comme un produit -->
    <div class="product-item filter-item">
        <form method="get" action="{{ path('app_products') }}" class="filter-form">
            <label for="minPrice">Prix minimum</label>
            <input type="number" name="minPrice" id="minPrice" step="0.01" value="{{ app.request.query.get('minPrice', '') }}">

            <label for="maxPrice">Prix maximum</label>
            <input type="number" name="maxPrice" id="maxPrice" step="0.01" value="{{ app.request.query.get('maxPrice', '') }}">

            <button type="submit">Filtrer</button>
        </form>
    </div>

    <!-- Produits -->
    {% for product in products %}
        <div class="product-item">
            <h3>{{ product.name }}</h3>
            <p>Prix : {{ product.price }} €</p>
            {% if product.imagePath %}
                <a href="{{ path('app_product_detail', {'id': product.id}) }}">
                    <img src="{{ product.imagePath }}" alt="{{ product.name }}" class="product-image">
                </a>
            {% else %}
                <p>Aucune image disponible</p>
            {% endif %}

            
        </div>
    {% endfor %}
</div>

<style>
    /* Conteneur principal pour les produits et le formulaire de filtre */
    .product-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* 3 colonnes égales */
        gap: 20px; /* Espacement entre les éléments (produits + filtre) */
        margin: 20px; /* Marge autour de la grille pour éviter qu'elle touche les bords de l'écran */
    }

    /* Style des éléments dans la liste de produits */
    .product-item {
        border: 1px solid #ddd;
        padding: 15px;
        background-color: #f9f9f9;
        text-align: center;
        width: 100%; /* S'assure que les produits occupent bien toute la largeur disponible */
        box-sizing: border-box; /* Assure que le padding ne modifie pas la largeur */
    }

    /* Spécifier la taille du formulaire de filtre pour qu'il occupe une "colonne" comme un produit */
    .filter-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 10px;
        padding: 15px;
        width: 100%; /* S'assure que la barre de recherche prend la place d'un produit */
        background-color: transparent; /* Enlever le fond */
        border: none; /* Enlever le bord autour du conteneur */
    }

    .product-item h3 {
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .product-item p {
        font-size: 1em;
        margin-bottom: 10px;
    }

    /* Style de l'image du produit */
    .product-image {
        max-width: 180px;
        height: auto;
        margin-bottom: 10px;
    }

    /* Actions supplémentaires pour l'admin */
    .admin-actions a {
        margin-right: 10px;
        color: #007bff;
        text-decoration: none;
    }

    .admin-actions a:hover {
        text-decoration: underline;
    }

    .add-button {
        display: inline-block;
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 20px;
    }

    .add-button:hover {
        background-color: #45a049;
    }

    /* Style du formulaire de filtre */
    .filter-form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .filter-form label {
        margin-right: 10px;
    }

    .filter-form input {
        margin-bottom: 10px;
        padding: 5px;
        width: 80%; /* Réduire la largeur des inputs */
    }

    .filter-form button {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        width: 80%; /* Aligner le bouton avec la largeur des inputs */
    }

    .filter-form button:hover {
        background-color: #45a049;
    }
</style>

{% endblock %}
